<div class="category-container">
  <h3><%= link_to category.title, category %></h3>
  <div class="actions">
    <% if user_signed_in? %>
      <%= link_to "Edit", edit_category_path(category) %>
      <%= link_to "Delete", category, method: :delete, data: {confirm: 'Are you sure?'} %>
    <% end %>
  </div>
</div>
